@model ConectaCafe.Models.Avaliacao

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}






<div class="row">
    <div class="col">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 mb-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3 ">Excluir</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-lg-8 col-md-9">
                        <div class="col-12 mb-3">
                            <h5 class="text-dark mb-0"> Confirma a exclusão desta Categoria?</h5>
                            <h6 class="text-danger mb-0 "> Essa ação será permanente</h6>
                            <div class="input-group input-group-outline mb-1">
                                <label asp-for="Pessoa" class="form-label"></label>
                                <input asp-for="Pessoa" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="input-group input-group-outline mb-1">
                                <label asp-for="Texto" class="form-label"></label>
                                <textarea asp-for="Texto" class="form-control" rows="3" readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 mb-3">
                                <div class="input-group input-group-outline mb-1">
                                    <label asp-for="Nota" class="form-label "></label>
                                    <input asp-for="Nota" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="col-4 mb-3">
                                <div class="input-group input-group-outline mb-1">
                                    <label asp-for="DataAvaliacao" class="form-label"></label>
                                    <input asp-for="DataAvaliacao" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-3 d-flex justify-content-center"> @*foto*@
                        <img id="Preview" src='@(Model.Foto ?? Url.Content("~/img/sem-foto.jpg"))' class="w-95"
                            alt="Foto">
                    </div>


                    <div class="mb-3"> @*Botão*@
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger me-2" />
                            <a asp-action="Index" class="btn btn-dark">Voltar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




